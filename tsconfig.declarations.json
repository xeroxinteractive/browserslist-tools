{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build/",
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "build", "**/__tests__/**/*.ts", "**/__mocks__/**/*.ts"]
}
